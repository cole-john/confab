<%= form_with(model: @reply, :id => "new_reply_form", local: false) do |form| %>
  
  <% if reply.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reply.errors.count, "error") %> prohibited this reply from being saved:</h2>

      <ul>
        <% reply.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="container">
    <div class="row row-cols-lg-auto g-1 align-items-center">
        <div class=field>
          <%= form.text_area :body, autofocus: true %>
        </div>
        
        <%= form.hidden_field :repliable_id, value: reply.repliable_id %>
        <%= form.hidden_field :repliable_type, value: reply.repliable_type %>
        <%= form.hidden_field :parent_id, value: reply.parent_id %>

      <%= form.submit "Reply", class: "btn btn-secondary btn-sm"%>
  </div>

<% end %>