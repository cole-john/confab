$(document).ready(function(){

  let add_reply = $("<%= j(render "posts/reply", reply: @reply) %>");
  add_reply.hide();
  $("<%= @reply.repliable_type.downcase %>_<%= @reply.repliable_id %>").after(add_reply);
  add_reply.slideDown();

  // reset the form
  $("#new_reply_form").trigger("reset");

});